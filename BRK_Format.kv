<StartScreen>:
    FloatLayout:
        MDLabel:
            text: "Scan Badge To Start:"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            font_style: "H5"
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]

        MDTextField:
            id: EmpID
            mode: "rectangle"
            hint_text: "Badge Number"
            focus: True
            size_hint: 0.7, None
            height: "48dp"
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            on_text_validate: root.validateUsr(self.text)


<InOutScreen>:
    FloatLayout:
        MDTopAppBar:
            title: "Board Rework"
            font_style: "H1"
            left_action_items: [["arrow-left", lambda y: app.backButton()]]
            pos_hint: {"top": 1}
            elevation: 10

        MDLabel:
            text: "Select Operation"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            halign: "center"
            font_style: "H4"
            size_hint: 1,None
            height: self.texture_size[1]

        MDRaisedButton:
            text: "Check-In Board"
            size_hint: .3,.2
            font_style: "H5"
            pos_hint: {"center_x":.25, "center_y":.4}
            on_release: app.switchScreen("checkInBoard")

        MDRaisedButton:
            text: "Check-Out Board"
            font_style: "H5"
            size_hint: .3,.2
            pos_hint: {"center_x":.75, "center_y":.4}
            on_release: app.switchScreen("checkOutBoard")


<CheckInBoard>:
    MDFloatLayout:
        MDTopAppBar:
            title: "Board Check-In"
            left_action_items: [["arrow-left", lambda y: app.backButton()]]
            pos_hint: {"top": 1}
            elevation: 10

        MDTextField:
            id: boardInMO
            mode: "rectangle"
            hint_text: "MO"
            focus: True
            size_hint: 0.7, None
            pos_hint: {"center_x":.4,"center_y":.8}
            on_text_validate: root.validateMO(self.text)

        MDTextField:
            id: boardInBarCode
            mode: "rectangle"
            hint_text: "Board Bar Code"
            opacity: 0
            disabled: True
            size_hint: .7, None
            pos_hint: {"center_x":.4,"center_y":.6}
            on_text_validate: root.validateBarCode(self.text)

        MDTextField:
            id: boardInPriority
            mode: "rectangle"
            hint_text: "Priority"
            opacity: 0
            disabled: True
            size_hint: 0.7, None
            pos_hint: {"center_x":.4,"center_y":.4}
            on_text_validate: root.validatePriority(self.text)

        MDTextField:
            id: boardInRWType
