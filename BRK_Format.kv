            text_size: None, None
            pos_hint: {"center_x":.55,"center_y":.35}
###############################################################
        MDIconButton:
            icon: "progress-alert" # progress-alert,
            size_hint: None,None
            pos_hint: {"center_x":.1,"center_y":.2}

        MDLabel:
            text: "Rework Type"
            size_hint: None, None
            pos_hint: {"center_x":.25,"center_y":.2}

        MDLabel:
            id: checkInConfirmRWType
            text: ""
            halign: 'left'
            size_hint: None, None
            text_size: None, None
            pos_hint: {"center_x":.55,"center_y":.2}
###############################################################

        MDRaisedButton:
            text: "Confirm"
            size_hint: .22,.1
            pos_hint: {"center_x":.8,"center_y":.15}
            on_release: root.assignBox()


<CheckOutBoard>:
    MDFloatLayout:
        MDTopAppBar:
            title: "Board Check-Out"
            left_action_items: [["arrow-left", lambda y: app.backButton()]]
            pos_hint: {"top": 1}
            elevation: 10

        MDRaisedButton:
            id: BGAReworkBtn
            opacity: 0
            disabled: True
            text: "BGA Rework"
            size_hint: .3,.2
            font_style: "H5"
            pos_hint: {"center_x":.25, "center_y":.4}
            on_release:

        MDRaisedButton:
            id: BoardReworkBtn
            opacity: 0
            disabled: True
            text: "Board Rework"
            size_hint: .3,.2
            font_style: "H5"
            pos_hint: {"center_x":.75, "center_y":.4}
            on_release: root.findBoard()

        MDLabel:
            id: errorMSG
            opacity: 0
            font_style: "H5"
            text: ""
            size_hint: .5, None
            height: self.texture_size[1]
            pos_hint: {"center_x": .5, "center_y": .5}
            halign: "center"
            text_size: self.width, None

